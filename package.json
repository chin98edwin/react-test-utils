{
  "name": "@chin98edwin/react-test-utils",
  "version": "0.0.0-experimental.2",
  "description": "Helper functions for writing tests for React with Jest and react-test-renderer.",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "files": [
    "dist",
    "react"
  ],
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./temp ./yarn-error.log && mkdir temp dist ",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "rollup": "rollup -c ./config/rollup.config.js",
    "tsc": "tsc --declaration",
    "api": "api-extractor run -c ./config/api-extractor.json --local --verbose",
    "build": "yarn run rollup && yarn run tsc && yarn run api",
    "all": "yarn clean && yarn lint:fix && yarn build && yarn test && yarn pack"
  },
  "keywords": [
    "React",
    "Test",
    "Jest",
    "React Test Renderer"
  ],
  "author": "chin98edwin",
  "readme": "README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chin98edwin/react-test-utils.git"
  },
  "bugs": {
    "url": "https://github.com/chin98edwin/react-test-utils/issues"
  },
  "homepage": "https://github.com/chin98edwin/react-test-utils#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@chin98edwin/eslint-plugin": "^0.0.0-experimental.5",
    "@microsoft/api-extractor": "^7.18.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.7",
    "@types/react": "^17.0.15",
    "@types/react-test-renderer": "^17.0.1",
    "eslint": "^7.31.0",
    "eslint-plugin-functional": "^3.3.0",
    "jest": "^27.0.6",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.1.0",
    "tsc": "^2.0.3",
    "typescript": "^4.3.5"
  }
}
